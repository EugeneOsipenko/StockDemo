<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp">
    
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceListItem"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintEnd_toStartOf="@id/bookmark"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SPDR S&amp;P 500" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="?android:textColorSecondary"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintEnd_toStartOf="@id/bookmark"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="SPY" />

    <TextView
        android:id="@+id/exchange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceListItem"
        android:textColor="?android:textColorSecondary"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintEnd_toStartOf="@id/bookmark"
        app:layout_constraintTop_toBottomOf="@id/symbol"
        tools:text="NYSE Arca" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_image_end"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#1A000000"
        app:layout_constraintBottom_toTopOf="@id/change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_image_end"
        tools:text="332.57" />

    <View
        android:id="@+id/change"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/exchange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/purple_200"
        />

    <com.google.android.material.internal.CheckableImageButton
        android:id="@+id/bookmark"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/bookmark_company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/change"/>

</androidx.constraintlayout.widget.ConstraintLayout>
